{{#if employee.length}}
<h1>{{intro}}</h1>
{{#if alert}}
<p>{{{alert}}}</p>
{{/if}}
<hr>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
    {{#each employee}}
        <tr>
            <td>{{id}}</td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{else}}
<p>No Employees Found</p>
{{/if}}