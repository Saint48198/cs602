<h1>{{title}}</h1>
{{#if alert}}
<div class="alert alert-success" role="alert">
    <p>{{{alert}}}</p>
</div>
{{/if}}
{{#if employee.length}}
<table class="table">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {{#each employee}}
        <tr>
            <td>{{@index}}</td>
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td class="actions">
                <ul>
                    <li><a href="/editEmployee/{{id}}">edit</a></li>
                    <li><a href="#delete" data-id="{{id}}" data-lname="{{lastName}}" data-fname="{{firstName}}" data-toggle="modal" data-target="#deleteModal"  data-backdrop="static">delete</a></li>
                </ul>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{else}}
<p>No Employees Found</p>
{{/if}}


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Delete Employee</h4>
        </div>
        <div class="modal-body">
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" data-loading-text="Working...">Delete</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/x-handlebars-template" id="template-modalMessage">
    \{{#if error}}
    <div class="alert alert-danger" role="alert">There was a problem deleting the employee. Try again at a later time.</div>
    \{{/if}}
    <p>This will permentally delete the employee. Do you want to continue?</p>
</script>