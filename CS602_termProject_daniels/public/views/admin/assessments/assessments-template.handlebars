<script id="template-adminAssessments" type="text/x-handlebars-template">
	<div class="container">
	  	<nav>
			<ol class="breadcrumb">
				<li><a href="/" data-bb-link>Home</a></li>
				<li><a href="/admin" data-bb-link>Courses</a></li>
				<li><a href="/admin-edit_course?course_id={{courseNumber}}" data-bb-link>Course</a></li>
				<li class="active">Assessments</li>
			</ol>
		</nav>
		<h1>Assessments</h1>
		<a href="/admin-add_assessment?course_id={{courseNumber}}">Add Assessment</a>
		<table class="table table-striped">
			<thead>
			<tr>
				<th>Name</th>
				<th>&nbsp;</th>
			</tr>
			</thead>
			<tbody>
			{{#each module}}
				<tr>
					<td><a href="/admin-edit_assessment?assessment_id={{_id}}">{{name}}</a></td>
					<td>
						<a href="/admin-edit_assessment?assessment_id={{_id}}" class="btn btn-default">Edit Details</a>
						<a href="/admin-questions?assessment_id={{_id}}" class="btn btn-default">View Questions</a>
						<button type="button" class="btn btn-danger btn-delete-assessment" data-id="{{_id}}">Delete</button>
					</td>
				</tr>
			{{/each}}
			</tbody>
		</table>
		<a href="/admin-add_assessment?course_id={{courseNumber}}">Add Assessment</a>
	</div>
</script>
