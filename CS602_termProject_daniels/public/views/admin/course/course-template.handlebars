<script id="template-adminCourse" type="text/x-handlebars-template">
	<div class="container">
		<div class="col-md-3">
			<nav>
				<ul class="nav nav-pills nav-stacked">
					<li role="presentation" class="active"><a href="/admin" data-bb-link>Courses</a></li>
					<li role="presentation"><a href="/admin-students" data-bb-link>Students</a></li>
					<li role="presentation"><a href="/admin-teachers" data-bb-link>Send Email</a></li>

					{{#if inEditMode}}
						<li role="presentation"><a href="/admin-add_student" data-bb-link>Add Student</a></li>
						<li role="presentation"><a href="/admin-add_teacher" data-bb-link>Add Teacher</a></li>
						<li role="presentation"><a href="/admin-add_assessment" data-bb-link>Add Assessment</a></li>
						<li role="presentation"><a href="/admin-add_assignment" data-bb-link>Add Assignment</a></li>
						<li role="presentation"><a href="/admin-add_module" data-bb-link>Add Module</a></li>
					{{/if}}
				</ul>
			</nav>
		</div>

		<div class="col-md-9">
			<ol class="breadcrumb">
				<li><a href="/" data-bb-link>Home</a></li>
				<li><a href="/admin" data-bb-link>Courses</a></li>
				<li class="active">Add Course</li>
			</ol>

			<h1>Add Course</h1>
			<form method="post" action="." id="form-AdminCourse">
				{{#if error}}
					<div class="alert alert-danger">
						{{{error}}}
					</div>
				{{/if}}

				{{#if success}}
					<div class="alert alert-success">
						{{{success}}}
					</div>
				{{/if}}

				<div class="form-group">
					<label for="inputCourseNumber" class="sr-only">Course Number</label>
					<input type="text" name="number" value="{{number}}" id="inputCourseNumber" class="form-control" maxlength="5" placeholder="Course Number" required autofocus /{{#if disabled}}disabled/{{/if}}>
				</div>

				<div class="form-group">
					<label for="inputCourseName" class="sr-only">Course Name</label>
					<input type="text" name="name" value="{{name}}" id="inputCourseName" class="form-control" maxlength="325" placeholder="Course Name" required /{{#if disabled}}disabled/{{/if}}>
				</div>

				<div class="form-group">
					<div class='input-group date' id='datetimepicker1'>
						<label for="inputStartDate" class="sr-only">Start Date</label>
						<input type='text' class="form-control" name="startDate" id="inputStartDate" placeholder="Start Date">
						<span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
					</div>
				</div>

				<div class="form-group">
					<div class='input-group date' id='datetimepicker2'>
						<label for="inputEndDate" class="sr-only">End Date</label>
						<input type='text' class="form-control" name="endDate" id="inputEndDate" placeholder="End Date">
						<span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
					</div>
				</div>

				<div class="form-group">
					<label for="inputCourseDesc" class="sr-only">Course Description</label>
					<textarea class="form-control" name="desc" id="inputCourseDesc" placeholder="Course Description"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Add Course</button>
				</div>
			</form>
		</div>
	</div>
</script>
