<script id="template-adminAssessment" type="text/x-handlebars-template">
	<div class="container">
		<div class="col-md-3">
			<nav>
				<ul class="nav nav-pills nav-stacked">
					<li role="presentation"><a href="/admin" data-bb-link>Courses</a></li>
					<li role="presentation"><a href="/admin/students" data-bb-link>Students</a></li>
					<li role="presentation"><a href="/admin/teachers" data-bb-link>Send Email</a></li>

					{{#if inEditMode}}
						<li role="presentation"><a href="/admin/users?role=user" data-bb-link>View Students</a></li>
						<li role="presentation"><a href="/admin/users?role=admin" data-bb-link>View Teachers</a></li>
						<li role="presentation" class="active"><a href="/admin/assessments" data-bb-link>View Assessments</a></li>
						<li role="presentation"><a href="/admin/assignments" data-bb-link>View Assignments</a></li>
						<li role="presentation"><a href="/admin/modules" data-bb-link>View Modules</a></li>
					{{/if}}
				</ul>
			</nav>
		</div>

		<div class="col-md-9">
			<nav>
				<ol class="breadcrumb">
					<li><a href="/" data-bb-link>Home</a></li>
					<li><a href="/admin" data-bb-link>Courses</a></li>
					<li class="active">Add Assessment</li>
				</ol>
			</nav>


			<h1>Add Assessment</h1>

			{{#if inEditMode}}
				<div>
					<a href="/admin/questions">View Questions</a>
				</div>
			{{/if}}

			<form method="post" action="." id="form-AdminAssessment">
				{{#if error}}
					<div class="alert alert-danger">
						{{{error}}}
					</div>
				{{/if}}

				{{#if success}}
					<div class="alert alert-success">
						{{{success}}}
					</div>
				{{/if}}

				<div class="form-group">
					<label for="inputAssessmentName" class="sr-only">Assessment Name</label>
					<input type="text" name="name" value="{{name}}" id="inputAssignmentName" class="form-control" maxlength="325" placeholder="Assessment Name" autofocus required /{{#if disabled}}disabled/{{/if}}>
				</div>

				<div class="form-group">
					<div class='input-group date' id='datetimepicker1'>
						<label for="inputDueDate" class="sr-only">Due Date</label>
						<input type='text' class="form-control" name="dueDate" id="inputDueDate" placeholder="Due Date">
						<span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
					</div>
				</div>

				<div class="form-group">
					<label for="inputPoints" class="sr-only">Total Points</label>
					<input type="text" name="points" value="{{points}}" id="inputPoints" class="form-control" maxlength="3" placeholder="Total Points" required /{{#if disabled}}disabled/{{/if}}>
				</div>

				<div class="form-group">
					<label for="inputInstructions" class="sr-only">Instructions</label>
					<textarea class="form-control" name="instructions" id="inputInstructions" placeholder="Instructions"></textarea>
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Add Assessment</button>
				</div>
			</form>

		</div>
	</div>
</script>

<script id="template-assignmentFileUpload" type="text/x-handlebars-template">

</script>