<script id="template-editUserPassword" type="text/x-handlebars-template">
	<div class="container">
		<div class="col-md-3">
			<nav>
				<ul class="nav nav-pills nav-stacked">
					<li role="presentation"><a href="/admin" data-bb-link>Courses</a></li>
					<li role="presentation"><a href="/admin-students" data-bb-link>Students</a></li>
					<li role="presentation"><a href="/admin-teachers" data-bb-link>Send Email</a></li>

					{{#if inEditMode}}
						<li role="presentation"><a href="/admin-users?type=user" data-bb-link>View Students</a></li>
						<li role="presentation"><a href="/admin-users?type=admin" data-bb-link>View Teachers</a></li>
						<li role="presentation"><a href="/admin-assessments" data-bb-link>View Assessments</a></li>
						<li role="presentation"><a href="/admin-assignments" data-bb-link>View Assignments</a></li>
						<li role="presentation"><a href="/admin-modules" data-bb-link>View Modules</a></li>
					{{/if}}
				</ul>
			</nav>
		</div>

		<div class="col-md-9">
			<nav>
				<ol class="breadcrumb">
					<li><a href="/" data-bb-link>Home</a></li>
					<li><a href="/admin" data-bb-link>Courses</a></li>
					<li><a href="/admin-user?user_id={{_id}}" data-bb-link>User</a></li>
					<li class="active">Edit Password</li>
				</ol>
			</nav>


			<h1>Edit Password</h1>
			<form method="post" action="." id="form-editUserPassword">
				{{#if error}}
					<div class="alert alert-danger">
						{{{error}}}
					</div>
				{{/if}}

				{{#if success}}
					<div class="alert alert-success">
						{{{success}}}
					</div>
				{{/if}}

				<div class="form-group">
					<label for="inputOldPassword" class="sr-only">Old Password</label>
					<input type="password" name="oldPassword" value="" id="inputOldPassword" class="form-control" maxlength="325" placeholder="Old Password" autofocus required /{{#if disabled}}disabled/{{/if}}>
				</div>

				<div class="form-group">
					<label for="inputNewPassword" class="sr-only"> New Password</label>
					<input type="password" name="newPassword" value="" id="inputNewPassword" class="form-control" maxlength="325" placeholder="New Password" required /{{#if disabled}}disabled/{{/if}}>
				</div>

				<div class="form-group">
					<label for="inputConfirmPassword" class="sr-only"> Confirm Password</label>
					<input type="password" name="confirmPassword" value="" id="inputConfirmPassword" class="form-control" maxlength="325" placeholder="Confirm Password" required /{{#if disabled}}disabled/{{/if}}>
				</div>


				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Change Password</button>
				</div>
			</form>
		</div>
	</div>
</script>
