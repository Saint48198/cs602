<script id="template-courseModulesBase" type="text/x-handlebars-template">
	<div class="container">
		<div class="col-md-3">
			<nav>
				<ul class="nav nav-pills nav-stacked">
					<li role="presentation"><a href="/course/{{courseId}}" data-bb-link>Home</a></li>
					<li role="presentation"><a href="/course/{{courseId}}/assessments" data-bb-link>Assessments</a></li>
					<li role="presentation"><a href="/course/{{courseId}}/assignments" data-bb-link>Assignments</a></li>
					<li role="presentation" class="active"><a href="/course/{{courseId}}/modules" data-bb-link>Course Modules</a></li>
					<li role="presentation"><a href="/grades/{{courseId}}" data-bb-link>My Grades</a></li>
					<li role="presentation"><a href="/messages/{{courseId}}" data-bb-link>Messages</a></li>
				</ul>
			</nav>
		</div>
		<div class="col-md-9 container-courseContent" id="courseContent">
			<div class="loader center" aria-label="loading..."></div>
		</div>
	</div>
</script>


<script id="template-courseModules" type="text/x-handlebars-template">
	<h2>{{courseId}} - {{course.name}}</h2>
	<h1 class="title">Modules</h1>
	{{#if module.length}}
		<ul class="noStyle">
			{{#each module}}
				<li>
					<a href="/course/{{../courseId}}/modules?module_id={{_id}}" data-bb-link>{{name}}</a>
					{{#if desc }}
						<p>{{desc}}</p>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	{{/if}}
</script>

<script id="template-courseModule" type="text/x-handlebars-template">
	<h2>{{courseId}} - {{course.name}}</h2>
	<h1 class="title"><small>Modules</small><br>{{module.name}}</h1>
	<p>{{module.desc}}</p>

	<div>
		{{#if prevPage}}
			<a href="/course/{{courseId}}/modules?module_id={{module._id}}&page={{prevPage}}">&#171; Prev</a>
		{{/if}}
		Page {{page}}
		{{#if nextPage}}
			<a href="/course/{{courseId}}/modules?module_id={{module._id}}&page={{nextPage}}">&raquo; Next</a>
		{{/if}}
	</div>

	<div>
		{{{content}}}
	</div>

</script>