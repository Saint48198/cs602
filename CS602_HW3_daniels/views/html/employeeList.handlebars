{{#if employee.length}}
<h1>{{intro}}</h1>
{{#if alert}}
<p>{{{alert}}}</p>
{{/if}}
<hr>
<table>
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {{#each employee}}
        <tr>
            <td>{{@index}}</td>
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td class="actions">
                <ul>
                    <li><a href="/editEmployee/{{id}}">edit</a></li>
                    <li><a href="#delete" data-id="{{id}}">delete</a></li>
                </ul>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{else}}
<p>No Employees Found</p>
{{/if}}